{
  "name": "ReadRuby",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Making English easy to read using Ruby ",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/content.js"]
  }],

  "browser_action": {
    "default_icon": "images/icon-16.png",
    "default_title": "test"
  },

  "web_accessible_resources": [
    "css/ruby.css"
  ],

  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
    // Not recommended; only provided for backwards compatibility,
    // and will be unsupported in a future version of Chrome (TBD).
    //"open_in_tab": true
  },

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]

}
