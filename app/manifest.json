{
  "name": "Read Ruby",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Making English easy to read using Ruby ",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/content.js"]
  }],

  "browser_action": {
    "default_icon": "images/icon-16.png",
    "default_title": "Read Ruby"
  },

  "web_accessible_resources": [
    "css/ruby.css",
    "css/display_inline.css",
    "css/display_none.css"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },


  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]

}
